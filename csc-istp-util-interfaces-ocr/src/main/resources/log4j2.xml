<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn" packages="com.csc.istp.common.log">
	<Appenders>
		<Console name="console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
		</Console>

		<RollingRandomAccessFile name="serverlog"
			fileName="logs/server.log" filePattern="logs/server-%d{yyyy-MM-dd}-%i.log.gz">
			<PatternLayout>
				<Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
			</PatternLayout>
			<Policies>
				<OnStartupTriggeringPolicy />
				<TimeBasedTriggeringPolicy interval="1"
					modulate="true" />
				<SizeBasedTriggeringPolicy size="100 MB" />
			</Policies>
			<DefaultRolloverStrategy max="100" />
		</RollingRandomAccessFile>

		<RollingRandomAccessFile name="serveremlog"
			fileName="logs/server-em.log" filePattern="logs/server-em-%d{yyyy-MM-dd}-%i.log.gz">
			<PatternLayout>
				<Pattern>%d %p %c{1.} [%t] %em%n</Pattern>
			</PatternLayout>
			<Policies>
				<OnStartupTriggeringPolicy />
				<TimeBasedTriggeringPolicy interval="1"
					modulate="true" />
				<SizeBasedTriggeringPolicy size="100 MB" />
			</Policies>
			<DefaultRolloverStrategy max="100" />
		</RollingRandomAccessFile>
	</Appenders>

	<Loggers>
		<AsyncRoot level="info">
			<AppenderRef ref="console" />
			<AppenderRef ref="serverlog" />
			<AppenderRef ref="serveremlog" />
		</AsyncRoot>
	</Loggers>
</Configuration>
